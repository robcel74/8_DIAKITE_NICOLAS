<UserControl x:Class="GameOfThrones.UCReglesJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOfThrones"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF3E0909" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image Source="/RESSOURCES/regles.jpg" Stretch="Fill"/>
        <Label x:Name="lab_regleN1" Content="Règle N°1" HorizontalAlignment="Center" Margin="0,371,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Colonna MT" FontWeight="Bold" Foreground="#FF3E0909"/>
        <Label x:Name="lab_regle1" Content="Sauver le donjon des ennemies qui l'attaquent" HorizontalAlignment="Left" Margin="324,437,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Colonna MT" FontWeight="Bold" Foreground="Black" Width="407"/>

        <Button x:Name="but_suivant" Content="suivant" HorizontalAlignment="Left" Margin="360,500,0,0" VerticalAlignment="Top" Width="140" Height="45" FontSize="22" Background="#FF442626" Foreground="White" FontWeight="Bold" Click="but_suivant_Click"/>
        <Button x:Name="but_skip" Content="skip" HorizontalAlignment="Left" Margin="552,500,0,0" VerticalAlignment="Top" Width="140" Height="45" FontSize="22" Background="#FF442626" Foreground="White" FontWeight="Bold"/>

    </Grid>
</UserControl>
