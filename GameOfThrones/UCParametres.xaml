<UserControl x:Class="GameOfThrones.UCParametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOfThrones"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC5BDBD"/>
                <GradientStop Color="#FFB98E8E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="lab_musique" Content="Musique" HorizontalAlignment="Left" Margin="117,72,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold"/>
        <Label x:Name="lab_diff" Content="Difficulté" HorizontalAlignment="Left" Margin="117,143,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold"/>
        <Label x:Name="lab_touches" Content="Touches" HorizontalAlignment="Left" Margin="109,300,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold"/>
        <Image x:Name="imgSon_musique" Margin="500,88,446,458" Source="/RESSOURCES/icone_son.png" Stretch="Fill"/>
        <Button x:Name="but_retour" Content="Retour" HorizontalAlignment="Left" Margin="37,10,0,0" VerticalAlignment="Top" Width="140" Height="45" FontSize="22" Background="#FF442626" Foreground="White" FontWeight="Bold"/>
        <Button x:Name="but_appliquer" Content="OK" HorizontalAlignment="Left" Margin="585,490,0,0" VerticalAlignment="Top" Width="230" Height="70" FontSize="36" Background="#FF442626" Foreground="White" FontWeight="Bold"/>
        <Button x:Name="but_aggrandir" Content="Agrandir fenêtre" HorizontalAlignment="Left" Margin="136,495,0,0" VerticalAlignment="Top" Width="230" Height="70" FontSize="24" Background="#FF442626" Foreground="White" FontWeight="Bold" />

        <Slider x:Name="SliderVolume" 
                Width="200" 
                Minimum="0" 
                Maximum="1" 
                LargeChange="0.1"
                ValueChanged="SliderVolume_ValueChanged" Margin="615,102,185,472" Height="25">

        </Slider>

        <ComboBox x:Name="ComboDifficulte" Width="200" SelectedIndex="0" Height="50" Margin="500,159,300,391" FontSize="34" FontWeight="Bold" SelectionChanged="ComboDifficulte_SelectionChanged">
            <ComboBoxItem>Facile</ComboBoxItem>
            <ComboBoxItem>Moyen</ComboBoxItem>
            <ComboBoxItem>Difficile</ComboBoxItem>
        </ComboBox>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="500,242,0,0">


            <Button x:Name="BtnHaut" Content="Haut : Z" Click="BtnChangerTouche_Click" Width="300" Height="50" Margin="5" FontWeight="Bold" FontSize="20"/>
            <Button x:Name="BtnGauche" Content="Gauche : Q" Click="BtnChangerTouche_Click" Width="300" Height="50" FontWeight="Bold" FontSize="20"/>

            <Button x:Name="BtnBas" Content="Bas : S" Click="BtnChangerTouche_Click" Width="300" Height="50" Margin="5" FontWeight="Bold" FontSize="20"/>
            <Button x:Name="BtnDroite" Content="Droite : D" Click="BtnChangerTouche_Click" Width="300" Height="50" FontSize="20" FontWeight="Bold"/>


        </StackPanel>




    </Grid>
</UserControl>
